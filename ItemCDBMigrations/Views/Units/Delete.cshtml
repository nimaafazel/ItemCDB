    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UnitDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitSupervisor)
        </dt>

